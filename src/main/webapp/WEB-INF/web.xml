<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="jakarta.ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="jakarta.ee 
                             jakarta.ee/web-app_5_0.xsd"
         version="5.0">

    <display-name>Sample Organizational WebApp</display-name>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.yourorg.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

